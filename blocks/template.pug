include _assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })

include head/head
include header/header
include head-line/head-line
include intro/intro
include title/title
include featured/featured
include latest/latest

doctype html
html(lang="ru")

	block head
		head
			+head({
				"title": "Workshop",
				"author": "Space Academy",
				"description": "Workshop"
			})
			
		+b.BODY.page
			+e.DIV.wrap
				block header
					+head-line()
					+header({
						"menu": [
							{
								"text": "Главная",
								"href": "index.html"
							},
							{
								"text": "О нас",
								"href": "index.html"
							},
							{
								"text": "Услуги",
								"href": "index.html"
							},
							{
								"text": "информация",
								"href": "index.html"
							},
							{
								"text": "Блог",
								"href": "index.html"
							},
							{
								"text": "Контакты",
								"href": "index.html"
							}
						]
					})
					
				block content
					h1 content
					
				block featured
					+featured({
						"featured-list": [
							{
								"href": "index.html",
								"src": "img/featured/tile01.jpg"
							},
							{
								"href": "index.html",
								"src": "img/featured/tile02.jpg"
							},
							{
								"href": "index.html",
								"src": "img/featured/tile03.jpg"
							},
							{
								"href": "index.html",
								"src": "img/featured/tile04.jpg"
							}
						]
					})

				block latest
					+latest

				block footer
					footer footer
				
